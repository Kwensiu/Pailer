{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pailer",
  "version": "0.0.1",
  "identifier": "com.pailer.ks",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pailer",
        "width": 800,
        "height": 600,
        "minWidth": 730,
        "minHeight": 450
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "store": null,
    "dialog": null
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "template": "custom-nsis/installer.nsi",
        "languages": ["English", "SimpChinese"],
        "displayLanguageSelector": false
      },
      "wix": {
        "fragmentPaths": [
          "./windows/fragments/env-refresh.wxs"
        ]
      }
    }
  }
}