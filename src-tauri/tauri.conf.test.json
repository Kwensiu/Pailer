{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pailer",
  "version": "1.5.5",
  "identifier": "com.pailer.ks",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pailer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "fragmentPaths": [
          "./windows/fragments/env-refresh.wxs"
        ]
      }
    }
  }
}